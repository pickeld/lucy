# App Configurations
LOG_LEVEL=DEBUG
WEBHOOK_URL=http://app:8765/webhook
DALLE_PREFIX=!!
CHAT_PREFIX=??

# PostgreSQL Configurations (for LangGraph checkpointer)
# Use 'db' as host when running in Docker, 'localhost' when running locally
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=langgraph


# Redis Configurations
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TTL=604800

# WAHA Configurations
WAHA_SESSION_NAME=default
WAHA_BASE_URL=http://waha:3000
WAHA_API_KEY=your-waha-api-key
WAHA_PRINT_QR=false
WAHA_MEDIA_STORAGE=LOCAL
WHATSAPP_FILES_FOLDER=/app/.media
WHATSAPP_FILES_LIFETIME=0
WHATSAPP_DOWNLOAD_MEDIA=true
WHATSAPP_FILES_MIMETYPES=image/jpeg,image/png

# LLM Configuration
# Set LLM_PROVIDER to 'openai' or 'gemini'
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7

# Google Gemini Configuration
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7

# Others
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
DALLE_MODEL=dall-e-3
TAVILY_API_KEY=your-tavily-api-key

# Qdrant Configuration (for RAG vector store)
# Use 'qdrant' as host when running in Docker, 'localhost' when running locally
# Dashboard available at: http://localhost:6333/dashboard
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# LangSmith (Optional - for cloud-based LLM tracing/debugging)
# Set to 'true' to enable tracing at https://smith.langchain.com
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=whatsapp-gpt
